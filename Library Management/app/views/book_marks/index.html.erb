<p id="notice"><%= notice %></p>

<h1>Book Marks</h1>
<% if current_user %>

  Hi,<%= current_user.name %> ! Logged in as <%= current_user.email %>.
  <%= link_to "Log Out", logout_path %><br>
  <%= link_to "Home", root_url %><br><br>
<%else %>
  <%= link_to "Sign Up", signup_path %> or
  <%= link_to "Log In", login_path %><br><br>
<% end %>
<table>
  <thead>
    <tr>
      <th>Book isbn</th>
      <th>Book title</th>
      <th>Student name</th>
      <th>Student email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_marks.each do |book_mark| %>
      <%if book_mark.student_email == current_user.email %>
      <tr>
        <td><%= book_mark.book_isbn %></td>
        <td><%= book_mark.book_title %></td>
        <td><%= book_mark.student_name %></td>
        <td><%= book_mark.student_email %></td>
<!--        <td><%#= link_to 'Show', book_mark %></td>-->
<!--        <td><%#= link_to 'Edit', edit_book_mark_path(book_mark) %></td>-->
        <td><%= link_to 'Unmark', book_mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end %>
    <% end %>
  </tbody>
</table>

<br>

