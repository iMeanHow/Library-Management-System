<p id="notice"><%= notice %></p>

<h1>Books</h1>
<% if current_user %>

  Hi,<%= current_user.name %> ! Logged in as <%= current_user.email %>.
  <%= link_to "Log Out", logout_path %><br>
  <%= link_to "Home", root_url %><br><br>
<%else %>
  <%= link_to "Sign Up", signup_path %> or
  <%= link_to "Log In", login_path %><br><br>
<% end %>
<table>
  <thead>
    <tr>
    <tr>
      <th>Title</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>

        <td><%= link_to 'Show', book %></td>
        <%if current_user.role=='admin' ||(current_user.role=='librarian'&&current_user.library != book.library) %>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>

        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <%end %>
    <%if book.nums_borrowed>=book.nums_total %><td> All Borrowed! </td> <%else%> <td><%= link_to 'Borrow', borrow_book_path(book) %></td> <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if current_user.role=='admin'||current_user.role=='librarian' %>
<%= link_to 'New Book', new_book_path %>
<%end %>