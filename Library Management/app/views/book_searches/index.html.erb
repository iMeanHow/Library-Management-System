<p id="notice"><%= notice %></p>

<h1>Book Searches</h1>
<% if current_user %>

  Hi,<%= current_user.name %> ! Logged in as <%= current_user.email %>.
  <%= link_to "Log Out", logout_path %><br>
  <%= link_to "Home", root_url %><br><br>
<%else %>
  <%= link_to "Sign Up", signup_path %> or
  <%= link_to "Log In", login_path %><br><br>
<% end %>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_searches.each do |book_search| %>
      <tr>
        <td><%= link_to 'Show', book_search %></td>
        <td><%= link_to 'Edit', edit_book_search_path(book_search) %></td>
        <td><%= link_to 'Destroy', book_search, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book Search', new_book_search_path %>
